@using WebApplication1.Models;
@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-sm-1 col-md-1  yt">
        <h3>Place Holder</h3>
    </div>
    <div class="col-sm-6 col-md-6  main">
        <h2>Welcome to Affintiy Wars Official Website!</h2>
        <div class="row">
            <div class="col-md-12">
                @foreach (var item in ViewBag.News)
                {
                    <div class="ForumThread">
                        <span style="display: block;">@item.Title</span>
                        <span>@Html.Raw(Server.HtmlDecode(CodeParser.getParser().ToHtml(item.Body)))</span>
                    </div>
                }
            </div>
        </div>
        
    </div>
    <div class="col-sm-1 col-md-1  rn">
        @Html.Action("RecentPost", "Forums");
    </div>
</div>

