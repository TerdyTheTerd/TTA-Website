<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/countrySelect.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
    <link href="~/Content/jquery.imagecrop.css" rel="stylesheet" />
    <link href="~/Content/wbbtheme.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.linearicons.com/free/1.0.0/icon-font.min.css">
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://code.jquery.com/jquery-2.2.4.js"
            integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI="
            crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery.wysibb.js"></script>
    <script src="https://use.fontawesome.com/8d28f25c9f.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <ul class="nav navbar-nav">
                <li class="drop">@Html.ActionLink("Affinity Wars", "Index", "Home")
                    <div class="dropdown-content">
                        @Html.ActionLink("Home", "Index", "Home")
                        @Html.ActionLink("Users", "Users", "Home")
                    </div>
                </li>
                <li class="drop">
                     @Html.ActionLink("Forums", "Index", "Forums")
                    <div class="dropdown-content">
                        @Html.ActionLink("Official Post", "Official-Post", "Forums")
                        @Html.ActionLink("Community Post", "Community-Post", "Forums")
                        @Html.ActionLink("My Post", "My-Post", "Forums")
                    </div>
                </li>
                <li>@Html.ActionLink("Shop", "Contact", "Home")</li>
                <li>@Html.ActionLink("Server", "Minecraft", "Home")</li>
                <li>@Html.ActionLink("Support", "Support", "Home")</li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="adminLink">@Html.ActionLink("Admin", "Index", "Admin")</li>
                }
                @*@Html.Partial("~/Views/Shared/AdminTestPartial.cshtml")*@
                @*<li>@Html.ActionLink("Community", "Users", "Home")</li>*@
            </ul>
            @Html.Partial("~/Views/Shared/Partials/_LoginPartial.cshtml")
            

        </div>

    </div>

    <div class="container body-content">
        @RenderBody()
        <div class="row">
            <div class="col-md-12">
                @if(User.Identity.IsAuthenticated)
                {
                    @Html.Partial("~/Views/Shared/Partials/_NotificationBarPartial.cshtml")
                }
                
            </div>
        </div>
        <hr />
    </div>
        <div class="row footer">
            <div class="ftTop">
                <div class="about">
                    <div class="aboutTitle">

                    <span class="aboutText">
                        
                        Info
                        <i class="fa fa-info-circle"></i>
                    </span>
                    </div>
                    <div class="aboutBody">
                        <p>Through The Ages is a community driven web application that offers extensive integration with TTA game servers. TTA was created by and is run by the community.</p>
                    </div>
                </div>
                <div class="links">

                </div>
                <div class="mediaLinks">

                </div>

            </div>
            <div class="container-fluid ft">
                
                <footer class="copy">
                    <p>&copy; @DateTime.Now.Year - TerdyTheTerd</p>

                </footer>
            </div>
        </div>

   <!-- @Scripts.Render("~/bundles/jquery")-->
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/tabs.js"></script>
    <script src="~/Scripts/jquery.magnific-popup.js"></script>
    <script src="~/Scripts/countrySelect.js"></script>
    <script src="https://use.fontawesome.com/8d28f25c9f.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery.imagecrop.js"></script>
    <script src="~/Scripts/knockout-3.4.0.js"></script>
    <script src="~/Scripts/moment.js"></script>
</body>
</html>
